                <g id="search" transform="translate(889.000000, 34.000000)">
                    <circle id="Oval" cx="7.11111111" cy="7.11111111" r="7.11111111"></circle>
                    <line x1="16" y1="16" x2="12.1333333" y2="12.1333333" id="Path"></line>
                </g>
            </g>
        </g>
      
      {% when 'cart' %}
        <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round">
            <g id="Desktop-Copy" transform="translate(-930.000000, -32.000000)" stroke="#FFFFFF" stroke-width="1.4">
                <g id="shopping-bag-(3)" transform="translate(931.000000, 33.000000)">
