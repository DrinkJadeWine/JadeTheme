{% assign variant = product.variants[0] %}

<div class="product-container">
  <div class="product__image">
    <img src="{{ product.images | first | image_url }}" />
  </div>
  <div class="product__details">
    <h1>{{ product.title }}</h1>
    <div class="product__details-description">
      {{ product.description }}
    </div>
    <div class="product__details-quantity-picker">
      <span class="quantity-title">QUANTITY</span>
      <div class="flex align-items-center mt-2">
        {% render 'quantity-picker' with quantity: 1, price: product.price, selected: true %}
        {% render 'quantity-picker' with quantity: 2, price: product.price %}
        {% render 'quantity-picker' with quantity: 6, price: product.price %}
        <span class="quantity-help-text">For when you just want that IG Flex</span>
      </div>
    </div>
    <button id="product-add-to-bag" class="button dark mt-2" data-items-quantity="1" data-product-id="{{ variant.id }}">
      Add to Bag
      <span class="ml-1 mr-1">-</span>
      <span id="product-result-price">{{ product.price | money}}</span>
    </button>
  </div>
</div>